@using NewsletterAppMVC.ViewModels
@model List<SignUpVm>

<div class="row no-gutters m-3">

    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">

        <div class="card-header text-center">
            <h5 class="m-0">Sign-Ups</h5>
        </div>

        <div class="card-body">
            @foreach (var singup in Model)
            {
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@singup.Id" />
                    <div class="row mb-3">

                        <div class="col col-2">
                            @singup.FirstName   
                        </div>
                        <div class="col">
                            @singup.LastName
                        </div>
                        <div class="col col-4">
                            @singup.EmailAddress
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger btn-block">
                                Unsubscrine
                            </button>
                        </div>

                    </div>
                }
            }
        </div>

    </div>
</div>


@using CarInsuranceQuotes.ViewModels
@model List<QuotePar>


<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!-- -->
<!-- -->

<div class="container">
    <div class="row">
        <div class="col-md-16">
            <div class="panel panel-default">
                <br />
                <h4 class="bg-company-blue text-center"><span style="color:white">Quotes Admin Report</span></h4>
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center" width="115px">First Name</th>
                            <th class="text-center" width="115px">Last Name</th>
                            <th class="text-center" width="115px">Birhday</th>
                            <th class="text-center" width="115px">Make</th>
                            <th class="text-center" width="115px">Model</th>
                            <th class="text-center" width="50px">Year</th>
                            <th class="text-center" width="115px">DUI</th>
                            <th class="text-center" width="50px">Tickets</th>
                            <th class="text-center" width="170px">Coverage</th>
                            <th class="text-center" width="115px">Quote</th>
                            <th class="text-center" width="115px">Quote Date</th>
                            <th class="text-center" width="115px">E-mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quote in Model)
                        {
                           
                                string Sdiu, Scover;
                                if (quote.diu == "Y")
                                {
                                    Sdiu = "Yes";
                                }
                                else
                                {
                                    Sdiu = "No";
                                }
                                //
                                if (quote.cover == "1")
                                {
                                    Scover = "Full Coverage";
                                }
                                else
                                {
                                    Scover = "Liability Coverage";
                                }
                            
                            <tr>
                                <td class="text-center"> @quote.firstName</td>
                                <td class="text-center"> @quote.lastName</td>
                                <td class="text-center"> @quote.dateBirth.Date.ToString("MM/dd/yyyy")</td>
                                <td class="text-center"> @quote.carMake</td>
                                <td class="text-center"> @quote.carModel</td>
                                <td class="text-center"> @quote.carYear</td>
                                <td class="text-center"> @Sdiu</td>
                                <td class="text-center"> @quote.speedTickets</td>
                                <td class="text-center"> @Scover</td>
                                <td class="text-center"> $@String.Format("{0:F2}", quote.totalQuote)
                                <td class="text-center"> @quote.quoteDate.Date.ToString("MM/dd/yyyy")</td>
                                <td class="text-center"> @quote.emailAddress</td>
                            </tr>
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>